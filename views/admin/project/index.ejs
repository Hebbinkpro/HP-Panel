<!DOCTYPE html>

<html lang="nl-NL">
    <head>
        <meta charset="utf-8">
        <title>Admin Projects - HP Panel</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/style.css">
        <link rel="stylesheet" href="/serverPanel/style.css">
    </head>

    <body>
        <div class="header">
            <h1 class="title">HP Panel</h1>
            <h2 class="subtitle">Admin Panel - Projects</h2>
        </div>

        <div class="profile">
            <h3 class="profile-account"><a href="/account">My Account: <%= account.username %></a></h3>
            <p class="profile-logout">
                <% if(account.admin > 0){ %>
                    <a href="/admin">Admin</a><br>
                <% } %>
                <a href="/console">Dashboard</a><br>
                <a href="/logout">Logout</a>
            </p>
        </div>

        <div class="panelMsg">
            <% if(msg.content !== ""){ %>
                <p style=<%= `color:${msg.color};` %>><%= msg.content %></p>
            <% } %>
        </div>

        <table class="users">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Owner</th>
                <th>Active</th>
                <th>Status</th>
            </tr>
            <% for(var i in projects){ %>
                <% var project = projects[i] %>
                <tr class="user tableRow" onclick=<%= `window.location.assign('/admin/projects/${project.id}')`  %>>
                    <td class="user-id"><%= project.id %></td>
                    <td class="user-email"><%= project.name %></td>
                    <td class="user-username"><%= project.owner.username %></td>
                    <td class="user-admin"><%= project.active == 0 ? "no" : "yes" %></td>
                    <td class="user-admin"><%= project.status %></td>
                </tr>
            <% } %>
        </table>

    </body>
</html>

